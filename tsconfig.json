{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true,
    // "suppressImplicitAnyIndexErrors": true,
    "target": "es2020",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@shared/*": ["eperusteet-frontend-utils/vue/src/*"],
      "@assets/*": ["eperusteet-frontend-utils/vue/public/*"],
      "@/*": ["src/*"],
      "&/*": ["tests/*"]
    },
    "lib": [
      "esnext",
      "es2015.promise",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.svg",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "eperusteet-frontend-utils"
  ],
  "vueCompilerOptions": {
    "target": 2.7
  }
}
